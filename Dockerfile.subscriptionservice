# Этап сборки
FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o subscriptionservice cmd/subscriptionservice/main.go

# Финальный этап
FROM alpine:latest

WORKDIR /root/

COPY --from=builder /app/subscriptionservice .

EXPOSE 8080

ENTRYPOINT ["./subscriptionservice"]
